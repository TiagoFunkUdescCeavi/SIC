    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "g++ - Criar e depurar o arquivo ativo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/project/DEBUG",
            "args": ["1234", "1", "241161500", "${workspaceRoot}/instances/p1.2.c.txt", "--algorithm", "grasp", "--alpha", "0.9", "--iterations", "4500", "--path", "y", "--margin", "1.9", "--removeOperator", "r", "--removePercentage", "0.15", "--shuffleOperator", "e", "--addOperator", "b" ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar a reformatação automática para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ arquivo de build ativo",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
